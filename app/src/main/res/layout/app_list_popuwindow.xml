<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@mipmap/local_popup_bg">

    <TextView
        android:id="@+id/app_uninstall"
        android:drawableTop="@mipmap/img1"
        android:text="卸载"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/app_start"
        android:drawableTop="@mipmap/img2"
        android:text="启动"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/app_share"
        android:drawableTop="@mipmap/img3"
        android:text="分享"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</LinearLayout>